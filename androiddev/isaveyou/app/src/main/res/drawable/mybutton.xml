<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <corners
                android:radius="15dp"/>
            <!-- Padding, in this case, around the button's text  -->
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp"
                />
            <solid
                android:color="@color/white"/>
            <stroke
                android:color="@color/black_semi_transparent"
                android:width="1dip"/>


        </shape></item>
<item
    android:state_pressed="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="1000dp" />
    <solid android:color="@color/corPar" />
    <stroke
        android:width="1dip"
        android:color="@color/corPar" />
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
     />
</shape></item>
</selector>